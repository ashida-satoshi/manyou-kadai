<%= form_with(model: @task, local: true) do |form| %>
    <% if @task.errors.any? %>
      <div id = "error_explanation">
        <h2><%= @task.errors.count %>エラーがあります。</h2>
        <ul>
        <% @task.errors.full_messages.each do |masg| %>
          <li><%= masg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="task_name">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div class="task_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <%= form.submit %>
  <% end %>

  <%= link_to "一覧画面に戻る", tasks_path %>